@using BLL.Interfaces
@using ENTITY.Usuarios
@inherits LayoutComponentBase
@inject IUsuarioService UsuarioService

<div class="layout-container">
    <div class="page">

        <aside class="sidebar @(isMenuVisible ? "" : "collapsed")">
            <ClientMenu />
        </aside>

        <main class="main-content @(isMenuVisible ? "" : "expanded")">
            <div class="header">
                <div class="left">
                    <button class="btn-toggle" @onclick="ToggleMenu">
                        @(isMenuVisible ? "✕" : "☰")
                    </button>
                    <span class="brand">Área de Cliente</span>
                </div>

                <div class="header-right">
                    <div class="user-menu">
                        <div class="user-avatar">CL</div>
                        <div class="user-name">@UserDisplayName</div>
                    </div>
                </div>
            </div>

            <article class="content">
                @Body
            </article>
        </main>
    </div>
</div>

@code {
    private bool isMenuVisible = true;
    private string UserDisplayName { get; set; } = "Cliente"; // Valor por defecto

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Obtener el nombre del usuario del servicio (ya autenticado)
            UserDisplayName = UsuarioService.ObtenerNombreUsuario();
        }
        catch (Exception ex)
        {
            UserDisplayName = "Error al obtener nombre"; // Manejo de errores
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void ToggleMenu() => isMenuVisible = !isMenuVisible;
}
