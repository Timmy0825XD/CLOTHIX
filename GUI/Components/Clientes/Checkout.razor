@page "/checkout"
@using ENTITY.Pedidos
@using ENTITY.Direcciones
@using ENTITY.Usuarios
@using GUI.Services
@using BLL.Interfaces
@inject CarritoService Carrito
@inject IPedidoService PedidoService
@inject NavigationManager Navigation

<div class="checkout-container">
    <div class="checkout-header">
        <button class="btn-back" @onclick="VolverAlCarrito">
            ← Volver al Carrito
        </button>
        <h2>Finalizar Compra</h2>
    </div>

    @if (Carrito.EstaVacio())
    {
        <div class="carrito-vacio">
            <div class="empty-icon">🛒</div>
            <h3>Tu carrito está vacío</h3>
            <p>Agrega productos antes de continuar</p>
            <button class="btn-primary" @onclick="IrAlCatalogo">
                Ver Productos
            </button>
        </div>
    }
    else
    {
        <div class="checkout-content">
            <!-- Formulario de compra -->
            <div class="checkout-form">
                <!-- Pasos del checkout -->
                <div class="steps">
                    <div class="step @(pasoActual >= 1 ? "active" : "")">
                        <div class="step-number">1</div>
                        <span>Dirección</span>
                    </div>
                    <div class="step-line @(pasoActual >= 2 ? "active" : "")"></div>
                    <div class="step @(pasoActual >= 2 ? "active" : "")">
                        <div class="step-number">2</div>
                        <span>Pago</span>
                    </div>
                    <div class="step-line @(pasoActual >= 3 ? "active" : "")"></div>
                    <div class="step @(pasoActual >= 3 ? "active" : "")">
                        <div class="step-number">3</div>
                        <span>Confirmar</span>
                    </div>
                </div>

                <!-- Paso 1: Dirección de envío -->
                @if (pasoActual == 1)
                {
                    <div class="form-section">
                        <h3>Dirección de Envío</h3>

                        <!-- NOTA: Aquí deberías cargar las direcciones del usuario desde la BD -->
                        <!-- Por ahora, usamos una dirección simulada -->

                        <div class="direccion-card selected">
                            <div class="direccion-info">
                                <h4>Dirección Principal</h4>
                                <p>Calle 123 #45-67</p>
                                <p>Barrio: Centro</p>
                                <p>Valledupar, Cesar</p>
                            </div>
                        </div>

                        <div class="info-note">
                            <p>ℹ️ La dirección de envío se tomará de tu perfil de usuario</p>
                        </div>

                        <div class="form-actions">
                            <button class="btn-next" @onclick="SiguientePaso">
                                Continuar →
                            </button>
                        </div>
                    </div>
                }

                <!-- Paso 2: Método de pago -->
                @if (pasoActual == 2)
                {
                    <div class="form-section">
                        <h3>Método de Pago</h3>

                        @if (cargandoMetodos)
                        {
                            <div class="loading-small">
                                <div class="spinner-small"></div>
                                <p>Cargando métodos de pago...</p>
                            </div>
                        }
                        else
                        {
                            <div class="metodos-grid">
                                @foreach (var metodo in metodosPago)
                                {
                                    <div class="metodo-card @(metodoPagoSeleccionado == metodo.Id ? "selected" : "")"
                                         @onclick="() => SeleccionarMetodoPago(metodo.Id)">
                                        <div class="metodo-icon">@ObtenerIconoMetodo(metodo.Nombre)</div>
                                        <div class="metodo-nombre">@metodo.Nombre</div>
                                    </div>
                                }
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="error-message">
                                <p>❌ @errorMessage</p>
                            </div>
                        }

                        <div class="form-actions">
                            <button class="btn-back-step" @onclick="PasoAnterior">
                                ← Atrás
                            </button>
                            <button class="btn-next" @onclick="SiguientePaso" disabled="@(metodoPagoSeleccionado == 0)">
                                Continuar →
                            </button>
                        </div>
                    </div>
                }

                <!-- Paso 3: Confirmación -->
                @if (pasoActual == 3)
                {
                    <div class="form-section">
                        <h3>Confirmar Pedido</h3>

                        <!-- Resumen de productos -->
                        <div class="confirmacion-productos">
                            <h4>Productos en tu pedido:</h4>
                            @foreach (var item in items)
                            {
                                <div class="producto-mini">
                                    <div class="producto-mini-info">
                                        <strong>@item.NombreArticulo</strong>
                                        <span>@item.Talla / @item.Color</span>
                                        <span>x @item.Cantidad</span>
                                    </div>
                                    <div class="producto-mini-precio">
                                        @item.Subtotal.ToString("C")
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Resumen de envío y pago -->
                        <div class="confirmacion-detalles">
                            <div class="detalle-item">
                                <strong>Envío:</strong>
                                <span>Dirección Principal</span>
                            </div>
                            <div class="detalle-item">
                                <strong>Método de pago:</strong>
                                <span>@ObtenerNombreMetodo(metodoPagoSeleccionado)</span>
                            </div>
                        </div>

                        @if (procesandoPedido)
                        {
                            <div class="procesando">
                                <div class="spinner-large"></div>
                                <p>Procesando tu pedido...</p>
                                <p class="procesando-info">Por favor espera, no cierres esta ventana</p>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="error-message">
                                <p>❌ @mensajeError</p>
                            </div>
                        }

                        <div class="form-actions">
                            <button class="btn-back-step" @onclick="PasoAnterior" disabled="@procesandoPedido">
                                ← Atrás
                            </button>
                            <button class="btn-confirmar" @onclick="ConfirmarPedido" disabled="@procesandoPedido">
                                @if (procesandoPedido)
                                {
                                    <span>Procesando...</span>
                                }
                                else
                                {
                                    <span>✓ Confirmar y Pagar</span>
                                }
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Resumen del pedido (siempre visible) -->
            <div class="checkout-resumen">
                <div class="resumen-card">
                    <h3>Resumen</h3>

                    <div class="resumen-linea">
                        <span>Productos (@totalProductos)</span>
                        <span>@subtotal.ToString("C")</span>
                    </div>

                    <div class="resumen-linea">
                        <span>Envío</span>
                        <span class="envio-gratis">GRATIS</span>
                    </div>

                    <div class="resumen-linea">
                        <span>IVA (19%)</span>
                        <span>@impuesto.ToString("C")</span>
                    </div>

                    <div class="resumen-divider"></div>

                    <div class="resumen-total">
                        <span>Total a pagar</span>
                        <span>@total.ToString("C")</span>
                    </div>

                    <div class="resumen-productos-lista">
                        <h4>@totalProductos productos</h4>
                        @foreach (var item in items)
                        {
                            <div class="producto-resumen">
                                <span>@item.NombreArticulo</span>
                                <span>x@item.Cantidad</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

