@code {
    private List<CarritoItemDTO> items = new();
    private List<MetodoPagoDTO> metodosPago = new();
    private List<CuponDisponibleDTO> cuponesDisponibles = new();
    private int totalProductos = 0;
    private decimal subtotal = 0;
    private decimal descuentoCupon = 0;
    private decimal total = 0;

    private int pasoActual = 1;
    private int metodoPagoSeleccionado = 0;
    private bool cargandoMetodos = false;
    private bool cargandoDireccion = false;
    private bool procesandoPedido = false;
    private string? errorMessage;
    private string? mensajeError;

    private int idUsuarioAutenticado = 0;
    private UsuarioConDireccionDTO? usuarioConDireccion;

    // Variables para cupones
    private string codigoCupon = "";
    private bool validandoCupon = false;
    private string? mensajeCupon;
    private string mensajeCuponTipo = "";
    private CuponDisponibleDTO? cuponAplicado;
    private int? idCuponAplicado;
    private bool mostrarCuponesDisponibles = false;

    protected override async Task OnInitializedAsync()
    {
        var usuario = await Sesion.ObtenerUsuarioActual();

        if (usuario == null)
        {
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        idUsuarioAutenticado = usuario.IdUsuario;

        items = Carrito.ObtenerItems();
        ActualizarTotales();

        await CargarDireccionUsuario();
        await CargarMetodosPago();
        await CargarCuponesDisponibles();
    }

    private async Task CargarDireccionUsuario()
    {
        try
        {
            cargandoDireccion = true;

            var response = await UsuarioService.ObtenerUsuarioConDireccion(idUsuarioAutenticado);

            if (response.IsSuccess && response.Object != null)
            {
                usuarioConDireccion = response.Object;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar dirección: {ex.Message}");
        }
        finally
        {
            cargandoDireccion = false;
        }
    }

    private void ActualizarTotales()
    {
        totalProductos = Carrito.ObtenerCantidadTotal();
        subtotal = Carrito.ObtenerTotal();
        total = subtotal - descuentoCupon;
    }

    private async Task CargarMetodosPago()
    {
        try
        {
            cargandoMetodos = true;
            errorMessage = null;

            var response = await PedidoService.ObtenerMetodosPago();

            if (response.IsSuccess && response.ListObject != null)
            {
                metodosPago = response.ListObject.ToList();
            }
            else
            {
                errorMessage = response.Message ?? "Error al cargar métodos de pago";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            cargandoMetodos = false;
        }
    }

    private async Task CargarCuponesDisponibles()
    {
        try
        {
            var response = await CuponService.ObtenerCuponesDisponibles(idUsuarioAutenticado);

            if (response.IsSuccess && response.ListObject != null)
            {
                cuponesDisponibles = response.ListObject.ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar cupones disponibles: {ex.Message}");
        }
    }

    private async Task ValidarYAplicarCupon()
    {
        if (string.IsNullOrWhiteSpace(codigoCupon))
            return;

        try
        {
            validandoCupon = true;
            mensajeCupon = null;

            var validacion = new ValidarCuponDTO
            {
                Codigo = codigoCupon.Trim().ToUpper(),
                IdUsuario = idUsuarioAutenticado,
                Subtotal = subtotal
            };

            var response = await CuponService.ValidarCupon(validacion);

            if (response.IsSuccess && response.Object != null)
            {
                var resultado = response.Object;

                if (resultado.EsValido)
                {
                    descuentoCupon = resultado.Descuento;
                    idCuponAplicado = resultado.IdCupon;

                    // Buscar el cupón en la lista de disponibles para mostrar detalles
                    var cuponDetalle = cuponesDisponibles.FirstOrDefault(c => c.IdCupon == resultado.IdCupon);
                    if (cuponDetalle != null)
                    {
                        cuponAplicado = cuponDetalle;
                    }
                    else
                    {
                        // Si no está en la lista, crear un objeto temporal
                        cuponAplicado = new CuponDisponibleDTO
                        {
                            IdCupon = resultado.IdCupon,
                            Codigo = validacion.Codigo,
                            Descripcion = resultado.Mensaje
                        };
                    }

                    ActualizarTotales();
                    codigoCupon = "";
                    mensajeCupon = null;
                    mensajeCuponTipo = "";
                }
                else
                {
                    mensajeCupon = resultado.Mensaje;
                    mensajeCuponTipo = "error";
                }
            }
            else
            {
                mensajeCupon = response.Message ?? "Error al validar cupón";
                mensajeCuponTipo = "error";
            }
        }
        catch (Exception ex)
        {
            mensajeCupon = $"Error: {ex.Message}";
            mensajeCuponTipo = "error";
        }
        finally
        {
            validandoCupon = false;
        }
    }

    private void AplicarCuponDirecto(string codigo)
    {
        codigoCupon = codigo;
        ValidarYAplicarCupon();
    }

    private void RemoverCupon()
    {
        cuponAplicado = null;
        idCuponAplicado = null;
        descuentoCupon = 0;
        codigoCupon = "";
        mensajeCupon = null;
        ActualizarTotales();
    }

