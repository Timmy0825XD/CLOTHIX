@page "/favoritos"
@using GUI.Components.Layout
@using BLL.Interfaces
@using ENTITY.Favoritos
@using ENTITY.Utilidades
@using GUI.Services
@using GUI.Components.Clientes
@using Microsoft.JSInterop
@inject IFavoritoService FavoritoService
@inject SesionService SesionService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@layout ClienteLayout
@implements IDisposable

<section class="favoritos-page">
    <div class="page-header">
        <div class="header-content">
            <h1><Icon Name="IconName.Heart" /> Mis Favoritos</h1>
            <p>@articulosFavoritos.Count() productos guardados</p>
        </div>
        @if (articulosFavoritos.Any())
        {
            <button class="btn-clear" @onclick="LimpiarTodosFavoritos">
                <Icon Name="IconName.Delete" /> Limpiar Todo
            </button>
        }
    </div>

    @if (!estaLogueado)
    {
        <div class="no-auth-message">
            <div class="no-auth-icon">
                <Icon Name="IconName.Lock" IconSize="IconSize.x5" />
            </div>
            <h2>Inicia sesión para ver tus favoritos</h2>
            <p>Guarda tus productos favoritos y accede a ellos desde cualquier dispositivo</p>
            <button class="btn-primary" @onclick="IrALogin">
                Iniciar Sesión
            </button>
        </div>
    }
    else if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p>Cargando tus favoritos...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="error-container">
            <Icon Name="IconName.Alert" IconSize="IconSize.x3" />
            <p>@errorMessage</p>
            <button class="btn-primary" @onclick="CargarFavoritos">Reintentar</button>
        </div>
    }
    else if (!articulosFavoritos.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <Icon Name="IconName.Heart" IconSize="IconSize.x5" />
            </div>
            <h2>Aún no tienes favoritos</h2>
            <p>Explora nuestro catálogo y guarda los productos que más te gusten</p>
            <button class="btn-primary" @onclick="IrACatalogo">
                <Icon Name="IconName.ShoppingBag" /> Explorar Catálogo
            </button>
        </div>
    }
    else
    {
        <div class="filters-section">
            <input class="input-search" type="text" placeholder="Buscar en favoritos..."
                   @bind="searchText" @bind:event="oninput" />

            <div class="filters-row">
                <select class="select" @bind="selectedCategoria">
                    <option value="">Todas las categorías</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat">@cat</option>
                    }
                </select>

                <select class="select" @bind="selectedMarca">
                    <option value="">Todas las marcas</option>
                    @foreach (var marca in marcas)
                    {
                        <option value="@marca">@marca</option>
                    }
                </select>

                <select class="select" @bind="sortBy">
                    <option value="reciente">Agregados recientemente</option>
                    <option value="precio_asc">Precio: Menor a Mayor</option>
                    <option value="precio_desc">Precio: Mayor a Menor</option>
                    <option value="nombre_asc">Nombre: A-Z</option>
                </select>
            </div>
        </div>

        <div class="results-info">
            <p>
                <strong>@ArticulosFiltrados.Count()</strong> favoritos
                @if (!string.IsNullOrEmpty(searchText) || !string.IsNullOrEmpty(selectedCategoria) || !string.IsNullOrEmpty(selectedMarca))
                {
                    <span class="filtered-text">· Filtrado</span>
                    <button class="btn-link" @onclick="LimpiarFiltros">Limpiar filtros</button>
                }
            </p>
        </div>

        <div class="grid">
            @foreach (var articulo in ArticulosFiltrados)
            {
                <div class="card">
                    <div class="img-wrap">
                        <img src="@GetImageUrl(articulo)" alt="@articulo.Nombre" loading="lazy" />

                        <button class="fav-btn active"
                                title="Quitar de favoritos"
                                @onclick="() => QuitarDeFavoritos(articulo.IdArticulo)">
                            <Icon Name="IconName.Heart" />
                        </button>

                        @if (articulo.VariantesDisponibles > 0)
                        {
                            <span class="badge-variants">@articulo.VariantesDisponibles variantes</span>
                        }

                        @if (articulo.Estado == 'A')
                        {
                            <span class="badge-active">Disponible</span>
                        }
                    </div>

                    <div class="card-info">
                        <p class="brand">@articulo.Marca</p>
                        <h3 class="product-name">@articulo.Nombre</h3>

                        <div class="tags">
                            <span class="tag">@articulo.CategoriaTipo</span>
                            <span class="tag">@articulo.Genero</span>
                        </div>

                        <div class="price-section">
                            <p class="price">@articulo.PrecioBase.ToString("C")</p>
                        </div>

                        @if (!string.IsNullOrEmpty(articulo.Material))
                        {
                            <p class="material"><Icon Name="IconName.Tag" /> @articulo.Material</p>
                        }

                        @if (articulo.StockTotal > 0)
                        {
                            <p class="stock"><Icon Name="IconName.CheckCircle" /> Stock: @articulo.StockTotal unidades</p>
                        }
                        else
                        {
                            <p class="stock-out">Sin stock</p>
                        }

                        <p class="fecha-agregado">
                            <Icon Name="IconName.Clock" />
                            Agregado: @articulo.FechaAgregado.ToString("dd/MM/yyyy")
                        </p>
                    </div>

                    <div class="card-actions">
                        @if (articulo.StockTotal > 0 && articulo.Estado == 'A')
                        {
                            <button class="btn-add-cart" @onclick="() => AgregarAlCarrito(articulo.IdArticulo)">
                                <Icon Name="IconName.ShoppingCart" />
                                <span>Agregar al Carrito</span>
                            </button>
                        }
                        else
                        {
                            <button class="btn-add-cart disabled" disabled>
                                <Icon Name="IconName.Alert" />
                                <span>No disponible</span>
                            </button>
                        }
                        <button class="btn-remove" @onclick="() => QuitarDeFavoritos(articulo.IdArticulo)">
                            <Icon Name="IconName.Delete" />
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</section>

