@page "/AdminProductos"

<div class="products-page container">
    <div class="page-header">
        <h2 class="page-title">Gestión de Productos</h2>
        <button class="btn-primary" @onclick="OpenNewProductModal">
            <span class="btn-icon">➕</span>
            Nuevo Producto
        </button>
    </div>

    <div class="products-card">
        <div class="toolbar">
            <div class="search-container">
                <span class="search-icon">🔍</span>
                <input type="text"
                       placeholder="Buscar productos..."
                       class="search-input"
                       @bind="searchText"
                       @bind:event="oninput" />
            </div>
            <button class="btn-secondary">
                <span class="btn-icon">🔽</span>
                Filtros
            </button>
            <button class="btn-secondary" @onclick="ExportProducts">
                <span class="btn-icon">📥</span>
                Exportar
            </button>
        </div>

        <div class="table-container">
            <table class="products-table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Ventas</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in FilteredProducts)
                    {
                        <tr>
                            <td class="product-name">@product.Name</td>
                            <td class="product-category">@product.Category</td>
                            <td class="product-price">$@product.Price.ToString("F2")</td>
                            <td>
                                <span class="@GetStockClass(product.Stock)">
                                    @product.Stock
                                </span>
                            </td>
                            <td class="product-sales">@product.Sales</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(product.Status)">
                                    @GetStatusText(product.Status)
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-view" @onclick="() => ViewProduct(product.Id)" title="Ver">
                                        <span>👁️</span>
                                    </button>
                                    <button class="btn-action btn-edit" @onclick="() => EditProduct(product.Id)" title="Editar">
                                        <span>✏️</span>
                                    </button>
                                    <button class="btn-action btn-delete" @onclick="() => DeleteProduct(product.Id)" title="Eliminar">
                                        <span>🗑️</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!FilteredProducts.Any())
            {
                <div class="empty-state">
                    <span class="empty-icon">📦</span>
                    <p>No se encontraron productos</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal Agregar/Editar Producto -->
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3 class="modal-title">@(isEditMode ? "Editar Producto" : "Nuevo Producto")</h3>
                <button class="modal-close" @onclick="CloseModal">✕</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label>Nombre del Producto</label>
                    <input type="text" class="form-input" @bind="newProduct.Name" placeholder="Ej: Chaqueta Denim Premium" />
                </div>

                <div class="form-group">
                    <label>Categoría</label>
                    <select class="form-input" @bind="newProduct.Category">
                        <option value="">Seleccionar categoría</option>
                        <option value="Chaquetas">Chaquetas</option>
                        <option value="Camisetas">Camisetas</option>
                        <option value="Pantalones">Pantalones</option>
                        <option value="Sudaderas">Sudaderas</option>
                        <option value="Camisas">Camisas</option>
                        <option value="Accesorios">Accesorios</option>
                    </select>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Precio ($)</label>
                        <input type="number" step="0.01" class="form-input" @bind="newProduct.Price" placeholder="0.00" />
                    </div>

                    <div class="form-group">
                        <label>Stock</label>
                        <input type="number" class="form-input" @bind="newProduct.Stock" placeholder="0" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Estado</label>
                    <select class="form-input" @bind="newProduct.Status">
                        <option value="active">Activo</option>
                        <option value="low">Stock Bajo</option>
                        <option value="out">Agotado</option>
                    </select>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">
                        ⚠️ @errorMessage
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn-cancel" @onclick="CloseModal">Cancelar</button>
                <button class="btn-save" @onclick="SaveProduct">
                    @(isEditMode ? "Guardar Cambios" : "Crear Producto")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private string searchText = "";
    private List<Product> products = new();
    private bool showModal = false;
    private bool isEditMode = false;
    private Product newProduct = new();
    private string errorMessage = "";

    protected override void OnInitialized()
    {
        LoadProducts();
    }

    private void LoadProducts()
    {
        products = new List<Product>
        {
            new Product { Id = 1, Name = "Chaqueta Denim Premium", Category = "Chaquetas", Price = 89.99m, Stock = 45, Sales = 124, Status = "active" },
            new Product { Id = 2, Name = "Camiseta Oversized", Category = "Camisetas", Price = 34.99m, Stock = 89, Sales = 256, Status = "active" },
            new Product { Id = 3, Name = "Pantalón Cargo Negro", Category = "Pantalones", Price = 64.99m, Stock = 12, Sales = 178, Status = "low" },
            new Product { Id = 4, Name = "Sudadera Hoodie", Category = "Sudaderas", Price = 54.99m, Stock = 67, Sales = 203, Status = "active" },
            new Product { Id = 5, Name = "Jeans Slim Fit", Category = "Pantalones", Price = 74.99m, Stock = 0, Sales = 312, Status = "out" },
            new Product { Id = 6, Name = "Bomber Jacket", Category = "Chaquetas", Price = 94.99m, Stock = 23, Sales = 145, Status = "active" },
            new Product { Id = 7, Name = "Polo Classic", Category = "Camisetas", Price = 39.99m, Stock = 54, Sales = 92, Status = "active" },
            new Product { Id = 8, Name = "Camisa Lino Blanca", Category = "Camisas", Price = 49.99m, Stock = 15, Sales = 67, Status = "low" },
        };
    }

    private IEnumerable<Product> FilteredProducts
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchText))
                return products;

            return products.Where(p =>
                p.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                p.Category.Contains(searchText, StringComparison.OrdinalIgnoreCase)
            );
        }
    }

    private string GetStockClass(int stock)
    {
        return stock < 20 ? "stock-low" : "stock-normal";
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "active" => "badge-active",
            "low" => "badge-low",
            "out" => "badge-out",
            _ => "badge-default"
        };
    }

    private string GetStatusText(string status)
    {
        return status switch
        {
            "active" => "Activo",
            "low" => "Stock Bajo",
            "out" => "Agotado",
            _ => status
        };
    }

    private void OpenNewProductModal()
    {
        isEditMode = false;
        newProduct = new Product { Status = "active" };
        errorMessage = "";
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        newProduct = new Product();
        errorMessage = "";
    }

    private void SaveProduct()
    {
        // Validaciones
        if (string.IsNullOrWhiteSpace(newProduct.Name))
        {
            errorMessage = "El nombre del producto es obligatorio";
            return;
        }

        if (string.IsNullOrWhiteSpace(newProduct.Category))
        {
            errorMessage = "La categoría es obligatoria";
            return;
        }

        if (newProduct.Price <= 0)
        {
            errorMessage = "El precio debe ser mayor a 0";
            return;
        }

        if (newProduct.Stock < 0)
        {
            errorMessage = "El stock no puede ser negativo";
            return;
        }

        if (isEditMode)
        {
            // Actualizar producto existente
            var existingProduct = products.FirstOrDefault(p => p.Id == newProduct.Id);
            if (existingProduct != null)
            {
                existingProduct.Name = newProduct.Name;
                existingProduct.Category = newProduct.Category;
                existingProduct.Price = newProduct.Price;
                existingProduct.Stock = newProduct.Stock;
                existingProduct.Status = newProduct.Status;
            }
        }
        else
        {
            // Crear nuevo producto
            newProduct.Id = products.Any() ? products.Max(p => p.Id) + 1 : 1;
            newProduct.Sales = 0;
            products.Add(newProduct);
        }

        CloseModal();
        StateHasChanged();
    }

    private void ViewProduct(int id)
    {
        Console.WriteLine($"Ver producto: {id}");
    }

    private void EditProduct(int id)
    {
        var product = products.FirstOrDefault(p => p.Id == id);
        if (product != null)
        {
            isEditMode = true;
            newProduct = new Product
            {
                Id = product.Id,
                Name = product.Name,
                Category = product.Category,
                Price = product.Price,
                Stock = product.Stock,
                Sales = product.Sales,
                Status = product.Status
            };
            errorMessage = "";
            showModal = true;
        }
    }

    private void DeleteProduct(int id)
    {
        var product = products.FirstOrDefault(p => p.Id == id);
        if (product != null)
        {
            products.Remove(product);
            StateHasChanged();
        }
    }

    private void ExportProducts()
    {
        Console.WriteLine("Exportar productos");
    }

    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Category { get; set; } = "";
        public decimal Price { get; set; }
        public int Stock { get; set; }
        public int Sales { get; set; }
        public string Status { get; set; } = "";
    }
}

